@model VideoWorld.ViewModels.NewMovieViewModel

@{
    ViewBag.Title = "Add Movie";
}

<h2>Add Movie</h2>
<p>@Model.ErrorMessage</p>
<div class="addMovie_form">
 <form method="post" action="/admin/newmovie">
        <div> Movie Title: <input type="text" name="title" value="@Model.Title"/></div> 
        @if (Model.ShowDetailedMovies)
        {
            <div> Director: <input type="text" name="director" value="@Model.Director"/></div> 
            <div> Actor: <input type="text" name="actor" value="@Model.Actor"/></div> 
            <div> Actress: <input type="text" name="actress" value="@Model.Actress"/></div> 
            <div> Category: <input type="text" name="category" value="@Model.Category"/></div>
        }
        <input type="submit" name="addNewMovie" class="addNewMovie" value="Create" />
    </form>
</div>

    
