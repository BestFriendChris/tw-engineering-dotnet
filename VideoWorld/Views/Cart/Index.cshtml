@model VideoWorld.Models.Cart

@{
    ViewBag.Title = "Cart";
}

<h2>Your Shopping Cart</h2>

<table class="rentals">
@foreach (var item in Model.Rentals) {    
    <tr class="rental">
        <td class="title">@item.Movie.Title</td>
        <td class="period">@item.Period </td>
    </tr>
}
</table>

<div class="checkout_form">
    <form method="post" action="/statements">
        <input type="submit" name="checkout" class="checkout" value="Checkout" />
    </form>
</div>
    
